ns.scal_diff_coefs       = 0.1

#¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨#
#        ADAPTIVE MESH REFINEMENT       #
#.......................................#
amr.n_cell              =   96 32     # Grid cells at coarsest AMRlevel
amr.max_level           =   1         # Max AMR level in hierarchy
# Refinement around the EB by default
